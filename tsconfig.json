{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDirs": [
      "src"
    ],
    "typeRoots" : ["../../node_modules/@types"],
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "resolveJsonModule": true,
  }
}
